<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:ignore="ContentDescription"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/txtCategory_layout"
        android:layout_alignBottom="@id/txtCategory_layout"
        android:src="@drawable/ic_location_red"
        android:id="@+id/imgCategory_layout"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCategory_layout"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imgCategory_layout"
        android:textSize="15sp"
        android:textColor="#656363"
        android:layout_toStartOf="@id/imgArrowDown_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/txtCategory_layout"
        android:layout_alignBottom="@id/txtCategory_layout"
        android:src="@drawable/ic_arrow_drop_down"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/imgArrowDown_layout"/>
</RelativeLayout>