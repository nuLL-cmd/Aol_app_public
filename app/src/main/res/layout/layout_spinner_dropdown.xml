<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imgCategory_drop"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/txtCategory_drop"
        android:layout_alignBottom="@id/txtCategory_drop"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_location_red"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtCategory_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/imgCategory_drop"
        android:textColor="#656363"
        android:textSize="15sp" />


</RelativeLayout>